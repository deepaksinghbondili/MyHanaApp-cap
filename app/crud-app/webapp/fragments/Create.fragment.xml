<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog id="idDialog" title="Create Fragment">
    <form:SimpleForm id="idForm">
      <form:content>
        <Label text="Enter Employee ID"></Label>
        <Input id="idEmp"></Input>
        <Label text="Enter Employee Name"></Label>
        <Input id="idName"></Input>
        <Label text="Mobile Number"></Label>
        <Input id="idNum"></Input>
        <Label text="City"></Label>
        <Input id="idCity"></Input>
      </form:content>
    </form:SimpleForm>
    <beginButton>
      <Button text="Save" type="Accept" press="onSave"></Button>
    </beginButton>
    <endButton>
      <Button text="Close" type="Reject" press="onClose"></Button>
    </endButton>
  </Dialog>
</core:FragmentDefinition>